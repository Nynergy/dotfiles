; Polybar Config
; Maintainer: Ben Buchanan @ Apparition

; COLORS
[colors]
black = #c00f0413
active = #c0c2023c
invisible = #000f0413
red = ${xrdb:color1:#000}
green = ${xrdb:color2:#000}
yellow = ${xrdb:color3:#000}
blue = ${xrdb:color4:#000}
magenta = ${xrdb:color5:#000}
cyan = ${xrdb:color6:#000}
white = ${xrdb:color7:#000}
gray = ${xrdb:color8:#000}

[bar/apparition]
; SIZE & POSITION
; Monitors
monitor = ${env:MONITOR:}

; Bar appears at the top of the screen
bottom = false

; Bar width and height
width = 100%
height = 70

; Optional offsets
;offset-x = 1%
;offset-y = 1%
; BAR DETAILS
; Background and foreground colors
background = ${colors.black}
foreground = ${colors.white}

; Radius for rounded corners
radius = 0.0

; Pixel size and color for over/underlines
line-size = 0
line-color = ${colors.red}

; Size and color for borders
border-size = 32
border-bottom-size = 0
border-color = ${colors.invisible}

; Opacity for fade-in/out
dim-value = 1.0

; Bar and module padding
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1
; FONTS
font-0 = xos4 Terminus:size=32;5
font-1 = AR PL Ukai CN:size=24;5
font-2 = Baekmuk Batang:size=24;5
font-3 = Wuncon Siji:size=24;5
; MODULES
modules-left = network i3
;modules-center = mpd
modules-center = date siren
modules-right = disk pulseaudio battery

; Center block justification
fixed-center = false
; SYSTEM TRAY
tray-position = right
tray-detached = false
tray-maxsize = 32
tray-background = ${root.background}

[bar/apparition-no-gaps]
; SIZE & POSITION
; Monitors
monitor = ${env:MONITOR:}

; Bar appears at the top of the screen
bottom = false

; Bar width and height
width = 100%
height = 70

; Optional offsets
;offset-x = 1%
;offset-y = 1%
; BAR DETAILS
; Background and foreground colors
background = ${colors.black}
foreground = ${colors.white}

; Radius for rounded corners
radius = 0.0

; Pixel size and color for over/underlines
line-size = 0
line-color = ${colors.red}

; Size and color for borders
border-size = 0
border-color = #00000000

; Opacity for fade-in/out
dim-value = 1.0

; Bar and module padding
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1
; FONTS
font-0 = xos4 Terminus:size=32;5
font-1 = AR PL Ukai CN:size=24;5
font-2 = Baekmuk Batang:size=24;5
font-3 = Wuncon Siji:size=24;5
; MODULES
modules-left = network i3
;modules-center = mpd
modules-center = date siren
modules-right = disk pulseaudio battery

; Center block justification
fixed-center = false
; SYSTEM TRAY
tray-position = right
tray-detached = false
tray-maxsize = 32
tray-background = ${root.background}

; MODULES
; I3 MODULE
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; Strip workspace numbers and show only names
strip-wsnumbers = true

label-mode-padding = 1
label-mode-foreground = ${colors.white}
label-mode-background = ${colors.black}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.active}
label-focused-underline = ${colors.cyan}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.black}
label-visible-underline = ${colors.black}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.yellow}
label-urgent-padding = 1

; Separator in between workspaces
; label-separator = |
; MPD MODULE
;[module/mpd]
;type = internal/mpd
;format-online = <label-song>  <bar-progress> <label-time>

;label-song = %artist% - %title%

;label-song-maxlen = 70
;label-song-ellipsis = true

;bar-progress-width = 20
;bar-progress-indicator = |
;bar-progress-fill = -
;bar-progress-empty = -
;bar-progress-fill-foreground = ${colors.red}
; DATE MODULE
[module/date]
type = internal/date
interval = 1

date = %a %b %d, %Y
date-alt = %A, %d %B %Y

time = %H:%M:%S
time-alt = %H:%M

format-foreground = ${colors.white}
format-background = ${colors.black}
format-underline = ${colors.blue}

label = %time% :: %date%
label-foreground = ${colors.white}
label-background = ${colors.black}
; XWINDOW MODULE
[module/title]
type = internal/xwindow

format = <label>
format-foreground = ${root.foreground}
format-background = ${root.background}

label = %title%
label-maxlen = 100

label-empty =
; BATTERY MODULE
[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
full-at = 90

time-format = %H:%M

bar-capacity-width = 10
bar-capacity-indicator = |
bar-capacity-fill = -
bar-capacity-empty = -
bar-capacity-fill-foreground = ${colors.green}

format-charging = <label-charging> <bar-capacity>
format-charging-underline = ${colors.green}

; VM thinks battery is constantly discharging, so remove annoying label
format-discharging = BAT <bar-capacity>
format-discharging-underline = ${colors.green}

format-full = <label-full> <bar-capacity>
format-full-underline = ${self.format-charging-underline}

label-charging = CHR (%time%)
label-discharging = DIS (%time%)
label-full = BAT
; NETWORK MODULE
[module/network]
type = internal/network
interface = enp0s3
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.green}
label-connected = Wired Connection

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.red}
label-disconnected = Disconnected
; PULSEAUDIO MODULE
[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted = <label-muted> <bar-volume>
label-muted = MUTE

bar-volume-width = 10
bar-volume-indicator = |
bar-volume-fill = -
bar-volume-empty = -
bar-volume-fill-foreground = ${colors.yellow}
; DISK MODULE
[module/disk]
type = custom/script
interval = 10
format-prefix = "DISK "
format = <label>
exec = /usr/bin/diskbar.sh
; SIREN MODULE
[module/siren]
type = custom/script
interval = 1
format = <label>
exec = /home/benjamin/.local/bin/sirenbar.py
tail = true
