#!/bin/bash

# A general system utility script that uses dmenu
# Maintainer: Ben Buchanan (https://github.com/Nynergy)

FONT="xos4Terminus-10"
BACKGROUND="$(grep color0 ~/.Xresources | awk '{print $2}')"
FOREGROUND="$(grep color5 ~/.Xresources | awk '{print $2}')"
CONFIRM_FOREGROUND="$(grep color1 ~/.Xresources | awk '{print $2}' | head -n 1)"

DMENU_SETTINGS="-nb $BACKGROUND -nf $FOREGROUND -sb $FOREGROUND -sf $BACKGROUND -fn $FONT"

COMPOSITOR=xcompmgr
NOTIFICATION=dunst
STATUSBAR=polybar
SCREENSHOT="scrot -d 1"
WEBCAM_DEVICE=/dev/video0

RESOLUTION=$(xrandr -q | awk '/*/ {print $1}' | head -n 1)
case $RESOLUTION in
	"1920x1080")
		GAPS=$(grep "HD gaps inner" ~/.config/i3/config | awk '{print $4}') ;;
	"3840x2160")
		GAPS=$(grep "4K gaps inner" ~/.config/i3/config | awk '{print $4}') ;;
esac

Confirm() {
	CONFIRM="$(echo -e 'No\nYes' | dmenu -c -l 2 -nb "$BACKGROUND" -nf "$CONFIRM_FOREGROUND" -sb "$CONFIRM_FOREGROUND" -sf "$BACKGROUND" -fn "$FONT" -i -p 'Are you sure?')";
}

CHOICES="Stream Workspace\nStart Randomizer\nTake Screenshot\nTake Selected Screenshot\nMount/Unmount Device\nChange Resolution\nDisplay Webcam\n--------------------\nChange Wallpaper\nChange and Set Wallpaper\nRegenerate Colors\nSet Colorscheme\nSave Colorscheme\n--------------------\nToggle SqueezeLite\nToggle Compositor\nToggle Notifications\nToggle Gaps\nToggle Status Bar\nToggle Light/Dark Mode\n--------------------\nLock Screen\nExit i3"

# NOTE: The $DMENU_SETTINGS variable cannot be double-quoted, or dmenu doesn't recognize the settings
CHOICE="$(echo -e "$CHOICES" | dmenu -c -l 30 $DMENU_SETTINGS -i -p 'System:')"

case $CHOICE in
	"Stream Workspace")
		/home/benjamin/Programming/Python/stream.py && \
		mpv --profile=low-latency --untimed --vf=hflip "$WEBCAM_DEVICE" ;;
	"Start Randomizer")
		feelsTPRman.sh ;;
	"Take Screenshot")
		$SCREENSHOT && notify-send "Screenshot Taken" ;;
	"Take Selected Screenshot")
		scrot -s && notify-send "Screenshot Taken" ;;
	"Mount/Unmount Device")
		tether ;;
	"Change Resolution")
		viewfinder ;;
	"Display Webcam")
		mpv --profile=low-latency --untimed --vf=hflip "$WEBCAM_DEVICE" ;;
	# NOTE: If user marks more than one wallpaper, only the first one will be chosen
	"Change Wallpaper") 
		WALLPAPER="$(sxiv -b -t -f -Z -o ~/Pictures/Wallpapers | head -n 1)";
		feh --bg-fill "$WALLPAPER" ;;
	"Change and Set Wallpaper")
		Confirm;
		[ "$CONFIRM" == "Yes" ] && WALLPAPER="$(sxiv -b -t -f -Z -o ~/Pictures/Wallpapers | head -n 1)" && \
			cp "$WALLPAPER" ~/Pictures/Wallpaper/wallpaper.jpg && \
			feh --bg-fill ~/Pictures/Wallpaper/wallpaper.jpg ;;
	"Regenerate Colors")
		prism ;;
	"Set Colorscheme")
		chameleon ;;
	"Save Colorscheme")
		palette ;;
	"Toggle SqueezeLite")
		soundspool ;;
	"Toggle Compositor")
		pkill $COMPOSITOR || $COMPOSITOR & ;;
	# With dunst, this really just resets the process, which is handy for reading a new dunstrc
	"Toggle Notifications")
		pkill $NOTIFICATION || $NOTIFICATION & ;;
	"Toggle Gaps")
		TOGGLE_STATE=$(cat ~/.toggle-util/gaps-toggle);
		[ "$TOGGLE_STATE" == "On" ] && i3-msg "gaps inner all set 0" && \
			marquee apparition-no-gaps && \
			echo "Off" > ~/.toggle-util/gaps-toggle;
		[ "$TOGGLE_STATE" == "Off" ] && i3-msg "gaps inner all set $GAPS" && \
			marquee apparition && \
			echo $GAPS && \
			echo "On" > ~/.toggle-util/gaps-toggle;
		;;
	"Toggle Status Bar")
		pkill $STATUSBAR;
		BARFLAG=$?;
		TOGGLE_STATE=$(cat ~/.toggle-util/gaps-toggle);
		[ $BARFLAG -eq 1 ] && [ "$TOGGLE_STATE" == "On" ] && marquee apparition;
		[ $BARFLAG -eq 1 ] && [ "$TOGGLE_STATE" == "Off" ] && marquee apparition-no-gaps;
		;;
	"Toggle Light/Dark Mode")
		LIGHT="$(grep color7 ~/.Xresources | awk '{print $2}')";
		DARK="$(grep color0 ~/.Xresources | awk '{print $2}')";
		sed -i "s/$LIGHT/TEMP/g" ~/.Xresources;
		sed -i "s/$DARK/$LIGHT/g" ~/.Xresources;
		sed -i "s/TEMP/$DARK/g" ~/.Xresources;
		prism;
		;;
	"Lock Screen")
		vault ;;
	"Exit i3")
		Confirm;
		[ "$CONFIRM" == "Yes" ] && i3-msg exit ;;
esac
